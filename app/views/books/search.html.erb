<% if !defined? @book %>
    <span>There were no results for your query</span><br/><br/>
<% else %>
    <h2>Results:</h2>

<%
    ["large", "medium", "small"].each do |size|
%>
      <img src="http://covers.librarything.com/devkey/<%= @devkey %>/<%= size %>/isbn/<%= @book[:asin] %>" /> 
<%    
    end
%>
    <br />
    <strong>Title:</strong> <%= @book[:title] %> <br />
    <strong>Author:</strong> <%= @book[:author]  %> <br />
    <strong>Review Pages:</strong> <%= @book[:reviewpages] %>  <br />
    <strong>Total Reviews:</strong> <%= @book[:reviewcount] %> <br />
    <strong>Rating:</strong> <%= @book[:reviewrating] %> <br />
    <strong>Rank:</strong> <%= @book[:salesrank] %> <br />
    <strong>Published on:</strong> <%= @book[:pubdate] %> <br />
    <strong>Price:</strong> <%= @book[:price] %> <br />
    <strong>ISBN:</strong> <%= @book[:isbn] %> <br />
    <strong>ASIN:</strong> <%= @book[:asin] %> <br />
<% end %>

<%= link_to 'Add Book', add_books_path(:book => @book), :method => :post %>

<% if !defined? @debug %>
    <hr /><span>There were no debug results for your query</span><br/><br/>
<% else %>
    <hr />
    <strong>Items:</strong> <%= @debug[:items] %><br />
    <strong>Pages:</strong> <%= @debug[:pages] %><br />
    <hr />
    <strong>Complete document is dumped below:</strong><br />
    <strong>===BEGIN===<br />
    </strong><%= h @debug[:doc] %><br />
    <strong>===End===</strong>
<% end %>
